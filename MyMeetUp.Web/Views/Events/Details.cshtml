@model MyMeetUp.Web.Models.Event

@{
    ViewData["Title"] = "Información del Evento";
}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col">
                    <span><b>@Model.FechaHora.ToString("dddd dd MMM yyyy")</b></span>
                    <div class="mt-1 mb-2 shadow p-3 bg-white rounded"><h2><span><i class="fa fa-calendar-check-o"></i></span> @Model.Title</h2></div>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">@Model.Description</p>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="row">
                        <div class="col">
                            <div class="card">
                                <div class="card-body">
                                    <h5><span><i class="fa fa-group"></i>  @Model.Group.Name</span></h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-1 row">
                        <div class="col">
                            <div class="card">
                                <div class="card-body">
                                    <p><span><i class="fa fa-clock-o"></i>  @Model.FechaHora.ToString("dd/MM/yyyy hh:mm")</span></p>
                                    <p><span><i class="fa fa-map-marker"></i>  @Model.Address</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

